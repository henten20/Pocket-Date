<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pocketdate.MatchProfileActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImageView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintBottom_toTopOf="@+id/creep_textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:background="@color/transparent"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.108" />

        <TextView
            android:id="@+id/match_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="verdana"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintLeft_toLeftOf ="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_age_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:fontFamily="verdana"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/match_name_textView"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_gender_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/black"
            android:fontFamily="verdana"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/match_age_textView"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_location_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:fontFamily="verdana"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/match_gender_textView"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_about_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About:"
            android:fontFamily="verdana"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/match_location_textView"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/creep_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creep Level"
            android:fontFamily="verdana"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/creep_image"
            app:layout_constraintTop_toBottomOf="@id/match_about_textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp" />


        <ImageView
            android:id="@+id/creep_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/progress4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.663" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>

