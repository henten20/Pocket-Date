<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        tools:context="com.example.pocketdate.MatchProfileActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintBottom_toTopOf="@+id/match_name_textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf ="parent"
            android:background="@color/transparent"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.108" />

        <TextView
            android:id="@+id/match_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="verdana"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintLeft_toLeftOf ="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_birthdate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthdate"
            android:fontFamily="verdana"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/match_name_textView"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_gender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFamily="verdana"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/match_birthdate_label"
            app:layout_constraintLeft_toRightOf ="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/match_about_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/match_gender_label"
            app:layout_constraintLeft_toRightOf ="parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>

