<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pocketdate.ReportActivity">

    <TextView
        android:id="@+id/reportLabel"
        android:layout_width="368dp"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:fontFamily="georgia"
        android:textSize="25px"
        android:text="@string/report_label"
         />

    <Spinner
        android:id="@+id/static_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reasonLabel"
        android:paddingTop="5dp"
   />

    <Spinner
        android:id="@+id/static_spinner_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/blockLabel"
        />

    <TextView
    android:id="@+id/reasonLabel"
    android:layout_width="wrap_content"
    android:textAlignment="center"
    android:paddingTop="30dp"
    android:layout_height="50dp"
    android:textColor="@color/black"
    android:fontFamily="georgia"
    android:textSize="25px"
    android:text="@string/reason_label"
    app:layout_constraintTop_toBottomOf="@+id/reportLabel"
    />

    <TextView
        android:id="@+id/blockLabel"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:paddingTop="30dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:fontFamily="georgia"
        android:textSize="25px"
        android:text="@string/block_label"
        app:layout_constraintTop_toBottomOf="@+id/static_spinner"
      />

    <TextView
        android:id="@+id/additionalLabel"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:paddingTop="30dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:fontFamily="georgia"
        android:textSize="25px"
        android:text="@string/comments_label"
        app:layout_constraintTop_toBottomOf="@+id/static_spinner_two"
      />

    <EditText
        android:id="@+id/about_text_input"
        android:layout_height="100dp"
        android:layout_width="368dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/additionalLabel"
    />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="Submit Report"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_text_input"
        android:layout_marginTop="57dp" />

</android.support.constraint.ConstraintLayout>
